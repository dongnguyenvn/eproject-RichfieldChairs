<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>sanpham</title>
    <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/libs/owlcarousel2/owl.carousel.min.css">
    <link rel="stylesheet" href="/libs/owlcarousel2/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/sanpham.css">
    <link rel="stylesheet" href="/font/css/all.css">
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="/libs/bootstrap/js/bootstrap.min.js"></script>
    
    <script src="/https://use.fontawesome.com/481e53f751.js"></script>
    <script src="/libs/owlcarousel2/owl.carousel.min.js"></script>
    <script src="/libs/jquery.zoom.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
</head>
<body>
<%- include('navbar')%>
<div class="page-content">
    <div class="breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li>Home</li>
                        <li>Shop</li>
                        <li>Sofa</li>
                        <li>Cylindo Accent Arm Chair</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="product-details">
        <div class="container">
            <div class="row row1">
                <div class="product-images col-xs-12 col-sm-6">
                    <div class="thumbnail">
                        <img src="/<%= product.Photo %>" class="img-responsive"/>
                    </div>
<!--                    <div class="thumbnail-list">-->
<!--                        <ul>-->
<!--                            <li>-->
<!--                                <img src="/imgs/46.jpg" class="img-responsive"/>-->
<!--                            </li>-->
<!--                            <li>-->
<!--                                <img src="/imgs/46_2.jpg" class="img-responsive"/>-->
<!--                            </li>-->
<!--                            <li>-->
<!--                                <img src="/imgs/46_3.jpg" class="img-responsive"/>-->
<!--                            </li>-->
<!--                        </ul>-->
<!--                    </div>-->
                </div>
                <div class="product-summary col-xs-12 col-sm-6">
                    <h1><%= product.Name %></h1>
                    <div class="product-price">
                        $<%= product.Price %>
                    </div>
                    <div class="product-variants">
                        <div class="variant-colors">
                            <label>Color</label>
                            <div class="color-attr">
                                <div class="color color1">
                                    <span></span>
                                </div>
                                <div class="color color2">
                                    <span></span>
                                </div>
                                <div class="color color3">
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="add-to-cart-bar">
                        <div class="quantity">
                            <div class="quantity-input-wrap">
                                <input type="text" value="1">
                                <span class="increase"><i class="fa fa-angle-up" aria-hidden="true"></i></span>
                                <span class="decrease"><i class="fa fa-angle-down" aria-hidden="true"></i></span>
                            </div>
                        </div>
                        <div class="add-to-cart">
                            <a href="/add/<%= product.ID %>"><button type="button">ADD TO CART</button></a>
                        </div>
                        <div class="wishlist">
                            <button type="button"><i class="far fa-heart"></i></button>
                        </div>
                        <div class="compare">
                            <button type="button"><i class="fas fa-compress-alt"></i></button>
                        </div>
                    </div>
                    <div class="product-metas">
                        <ul>
                            <li>SKU:<%= product.SKU %></li>
                            <li>Categories: Sofa</li>
                            <li>Tags: <a href="#"><%= Tag.TagName %></a>
                        </ul>
                    </div>
                    <div class="social-icons">
                        <ul>
                            <li><i class="fab fa-facebook"></i></li>
                            <li><i class="fab fa-twitter" aria-hidden="true"></i></li>
                            <li><i class="fab fa-pinterest-p" aria-hidden="true"></i></li>
                            <li><i class="fab fa-linkedin" aria-hidden="true"></i></li>
                            <li><i class="fab fa-reddit-alien" aria-hidden="true"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row row2">
                <div class="col-xs-12">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#description">Description</a></li>
                        <li><a data-toggle="tab" href="#additional-information">Additional information</a></li>
                        <li><a data-toggle="tab" href="#reviews">Reviews</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="description" class="tab-pane fade in active">
                            <div class="tab-content-wrap">
                                <p><%= product.Description%></p>
                            </div>
                        </div>
                        <div id="additional-information" class="tab-pane fade">
                            <div class="tab-content-wrap">
                                <table class="woocommerce-product-attributes shop_attributes">
                                    <tbody>
                                    <tr class="woocommerce-product-attributes-item woocommerce-product-attributes-item--weight">
                                        <th class="woocommerce-product-attributes-item__label">Weight</th>
                                        <td class="woocommerce-product-attributes-item__value">10 kg</td>
                                    </tr>
                                    <tr class="woocommerce-product-attributes-item woocommerce-product-attributes-item--dimensions">
                                        <th class="woocommerce-product-attributes-item__label">Dimensions</th>
                                        <td class="woocommerce-product-attributes-item__value"><%= product.Size %> cm</td>
                                    </tr>
                                    <tr class="woocommerce-product-attributes-item woocommerce-product-attributes-item--attribute_pa_color">
                                        <th class="woocommerce-product-attributes-item__label">Color</th>
                                        <td class="woocommerce-product-attributes-item__value"><p><a
                                                href="https://demo.theme-sky.com/drile/color/gray/" rel="tag">Gray</a>,
                                            <a href="https://demo.theme-sky.com/drile/color/blue/" rel="tag">Blue</a>,
                                            <a href="https://demo.theme-sky.com/drile/color/peach/" rel="tag">Peach</a>
                                        </p>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="reviews" class="tab-pane fade">
                            <div class="tab-content-wrap">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-6">
                                        There are no reviews yet.
                                    </div>
                                    <div class="col-xs-12 col-sm-6">
                                        <h3> BE THE FIRST TO REVIEW “CYLINDO ACCENT ARM CHAIR”</h3>
                                        <form action="#">
                                            <div class="form-group">
                                                <div class="stars">
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="Review">Your review *</label>
                                                <textarea cols="5" class="form-control" id="Review"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputName">Name *</label>
                                                <input type="text" class="form-control" id="exampleInputName">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail">Email *</label>
                                                <input type="email" class="form-control" id="exampleInputEmail">
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="ADD REVIEW">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row3">
                <div class="col-xs-12">
                    <div class="related-products">
                        <h3>YOU MAY ALSO LIKE…</h3>
                        <div class="related-product-carousel owl-carousel owl-theme">
                            <% RelatedProduct.map(e => { %>
                                <div class="item">
                                    <div class="product-item">
                                        <a href="/product-detail/<%= e.ID %>">
                                            <img src="/<%= e.Photo %>"/>
                                        </a>
                                        <h3><a href="/product-detail/<%= e.ID %>"><%= e.Name %></a></h3>
                                        <div class="price">
                                            <span>$<%= e.Price %></span>
                                        </div>
                                    </div>
                                </div>
                            <%}) %>
                        </div>
                        <script>
                            $('.owl-carousel').owlCarousel({
                                loop: true,
                                margin: 30,
                                nav: true,
                                dots: false,
                                responsive: {
                                    0: {
                                        items: 1
                                    },
                                    600: {
                                        items: 3
                                    },
                                    1000: {
                                        items: 4
                                    }
                                }
                            })
                            $(document).ready(function(){
                                var curr_img = $('.thumbnail').find('img');
                                $('.thumbnail').zoom({url:curr_img.attr('src') });


                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>
</body>
</html>