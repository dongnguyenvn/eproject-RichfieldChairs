<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="/libs/Bootstrap3.3.7/css/bootstrap.css"/>
    <link rel="stylesheet" href="/libs/owl.carousel/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="/libs/owl.carousel/owl-carousel/owl.theme.css">
    <link rel="stylesheet" type="text/css" href="/css/Allproduct.css">
    <link rel="stylesheet" href="/font/css/all.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400;1,500&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('navbar')%>
    <div class="container">
        <div id="heading">
            <h1 class="heading-title"><%= CategoryName.CategoryName %></h1>
        </div>
        <div class="product">
            <div class="nav-bar">
                <div id="zoom-in-out">
                    <a href="#">Zoom in</a>
                    <i class="fas fa-search-minus"></i>
                </div>
                <aside class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav nav-bar navbar-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Categories
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Accesories</a></li>
                                <li><a href="#">Bed</a></li>
                                <li><a href="#">Cabinet</a></li>
                                <li><a href="#">Chair</a></li>
                                <li><a href="#">Lamp</a></li>
                                <li><a href="#">Sofa</a></li>
                                <li><a href="#">Table</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Price
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">0-$100</a></li>
                                <li><a href="#">$100-$300</a></li>
                                <li><a href="#">$300-$500</a></li>
                                <li><a href="#">$500-$800</a></li>
                                <li><a href="#">$800-$1000</a></li>
                                <li><a href="#">Over $1000</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Color
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Gray</a></li>
                                <li><a href="#">Green</a></li>
                                <li><a href="#">Red</a></li>
                                <li><a href="#">Black</a></li>
                                <li><a href="#">Blue</a></li>
                                <li><a href="#">Brown</a></li>
                                <li><a href="#">Peace</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Material
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Aluminium</a></li>
                                <li><a href="#">Velvet</a></li>
                                <li><a href="#">Iron</a></li>
                                <li><a href="#">Wood</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <button class=" btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                                Sort by Latest
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Aluminium</a></li>
                                <li><a href="#">Velvet</a></li>
                                <li><a href="#">Iron</a></li>
                                <li><a href="#">Wood</a></li>
                            </ul>
                        </li>
                    </ul>
                </aside>
                <div class="all-products">
                    <div class="row">
                        <% products.map(e => { %>
                            <div class="product-type col-sm-3 col-md-3 col-lg-3">
                                <div class="img">
                                    <img src="/<%= e.Photo %>" alt="Fadeout">
                                </div>
                                <div class="wrapper">
                                    <h3 class="product-name"><a href="/product-detail/<%= e.ID %>"><%= e.Name %></a></h3>
                                    <span>$</span>
                                    <%= e.Price %>
                                </div>
                            </div>
                        <% })%>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('footer') %>


<script type="text/javascript" src="JS/jQuery.js"></script>
<script src="libs/owl.carousel/owl-carousel/owl.carousel.js"></script>
<script type="text/javascript">
    $('#loadMore').click( function() {
        var ajaxLimit = 5;
        $.ajax({
            url: '/product',
            method: 'GET',
            data: {ajaxLimit: ajaxLimit},
            success: function () {
                console.log("limit changed")
            }
        });
    });

</script>
</body>
</html>